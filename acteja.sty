\newcommand{\actejaset}[7]{
\def\actavol{#1}
\def\actanum{#2}
\def\actastartpage{#4}
\def\actaendpage{#5}
\def\actayear{#3}
\def\articlenumber{#6}
\def\actatitle{#7 -- Acta Technica Jaurinensis, Vol. \actavol, No. \actanum, pp. \actastartpage--\actaendpage, \actayear}
\setcounter{page}{#4}}

\newcommand{\actastring}{Vol. \actavol, No. \actanum, pp. \actastartpage--\actaendpage, \actayear}

\newcommand{\@institute}{}
\newcommand{\institute}[1]{\renewcommand{\@institute}{#1}}


\renewcommand\Large{
	\@setfontsize\Large{16pt}{18}
}


\renewcommand{\maketitle}{
\begin{textblock}{\textwidth\TPHorizModule}(0,-30.5)
    {\fontfamily{ptm}\selectfont \noindent \footnotesize\itshape
	\begin{tabularx}{\textwidth}{@{}l @{\extracolsep{\fill}} c @{\extracolsep{\fill}} r@{}}
	  \multirow{4}{*}{
	    \includegraphics[height=20mm]{\actalogo}
	  } & & \multirow{4}{*}{\includegraphics[height=20mm]{\szelogo}} \\
	  & \large{ACTA TECHNICA JAURINENSIS} 			& \\[0.12cm]
	  & \medium{\actastring} 		&  \\[0.12cm]
	  & \medium{\href{https://doi.org/\doinumber}{\doinumber}} 	& \\
	\end{tabularx}
    }
\end{textblock}
