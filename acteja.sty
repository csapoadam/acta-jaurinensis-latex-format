\newcommand{\actejaset}[7]{
\def\actavol{#1}
\def\actanum{#2}
\def\actastartpage{#4}
\def\actaendpage{#5}
\def\actayear{#3}
\def\articlenumber{#6}
\def\actatitle{#7 -- Acta Technica Jaurinensis, Vol. \actavol, No. \actanum, pp. \actastartpage--\actaendpage, \actayear}
\setcounter{page}{#4}}

\newcommand{\actastring}{Vol. \actavol, No. \actanum, pp. \actastartpage--\actaendpage, \actayear}

\newcommand{\@institute}{}
\newcommand{\institute}[1]{\renewcommand{\@institute}{#1}}


